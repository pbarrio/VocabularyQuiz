<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bikebot.vocabularyquiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddWordActivity"
            android:label="@string/title_activity_add_word" />
        <activity android:name=".QuizActivity"
            android:label="@string/title_activity_quiz" />
        <activity android:name=".ConfigOptionsActivity"
            android:label="@string/title_activity_config_options" />
        <activity android:name=".ErrorMsgActivity"
            android:label="@string/title_activity_error_msg" />
        <activity android:name=".ResultsActivity"
            android:label="@string/title_activity_results" />
        <activity android:name=".ListDictionaryActivity"
            android:label="@string/title_activity_list_dictionary" />
        <!-- TODO: #1 Fix GoogleAppIndexingWarning -->
        <activity android:name=".ListConfigOptionsActivity"
            android:label="@string/title_activity_list_config_options" />
    </application>

</manifest>
